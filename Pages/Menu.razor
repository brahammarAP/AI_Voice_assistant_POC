@page "/menu"
@inject IUserSession Session;
@inject IMobileSwipeService Swipe;
@inject IChatHistoryRepository ChatHistory;
@inject IMessageService MessageService;
@implements IDisposable;

<PageTitle>Meny</PageTitle>

